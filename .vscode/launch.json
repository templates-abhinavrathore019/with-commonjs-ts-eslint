    "version": "0.2.0",
    "configurations": [
        {
            "name": "DEBUG DEV",
            "type": "node",
            "request": "launch",
            "runtimeArgs": [
                "run-script",
                "dev"
            ],
            "runtimeExecutable": "npm",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/src/app.ts"
        },
        {
            "name": "DEBUG PROD",
            "type": "node",
            "request": "launch",
            "runtimeArgs": [
                "run-script",
                "prod"
            ],
            "runtimeExecutable": "npm",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/src/app.ts"
        }
    ]
}